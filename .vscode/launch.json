{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Tests",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"--require",
				"ts-node/register",
				"--watch-extensions",
				"ts",
				"${workspaceRoot}/test/**/*.test.ts",
				"${workspaceRoot}/test/**/**/*.test.ts"
			],
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
