{
	"version": "0.2.0",
	"configurations": [{
		"type": "node",
		"request": "launch",
		"name": "Debug web harness",
		"runtimeArgs": [
			"src/harness/web.js"
		]
	}, {
		"type": "node",
		"request": "launch",
		"name": "Debug worker harness",
		"runtimeArgs": [
			"src/harness/worker.js"
		]
	}, {
		"type": "node",
		"request": "launch",
		"name": "Debug Tests",
		"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
		"args": [
			"-u",
			"tdd",
			"--timeout",
			"999999",
			"--colors",
			"--recursive",
			"${workspaceRoot}/src/spec"
		],
		"internalConsoleOptions": "openOnSessionStart"
	}]
}