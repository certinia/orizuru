{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Tests",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"--config",
				"${workspaceRoot}/test/.mocha.json",
				"--no-timeouts"
			],
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug System Tests",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"--config",
				"${workspaceRoot}/systemtests/.mocha.json",
				"--no-timeouts"
			],
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
