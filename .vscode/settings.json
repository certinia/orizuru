{
	"beautify.config": "node_modules/@financialforcedev/eslint-config/.jsbeautifyrc",
	"beautify.language": {
		"js": {
			"type": [
				"javascript",
				"json"
			],
			"filename": [
				".jsbeautifyrc"
			]
		}
	},
	"beautify.ignore": [
		"**/.vscode/*",
		"package.json"
	],
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"files.associations": {
		"*.avsc": "json"
	},
	"files.exclude": {
		"**/.nyc_output": true,
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/coverage": true,
		"src/**/*.js": true
	},
	"files.insertFinalNewline": true,
	"lcov.path": "coverage/lcov.info",
	"lcov.watch": [
		{
			"pattern": "**/*.ts",
			"command": "npm test"
		}
	],
	"runCurrentTest.run": "npm run single-test -- ${relativeTestPath}",
	"terminal.integrated.scrollback": 10000,
	"workbench.colorCustomizations": {
		"activityBar.foreground": "#007DFF"
	}
}
