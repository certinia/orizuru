{
	"name": "@financialforcedev/orizuru",
	"version": "7.0.0",
	"description": "Streamlined communication between Heroku dynos / other worker processes",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc && cp src/index/transport/transport.avsc dist/index/transport",
		"doc": "typedoc --ignoreCompilerErrors --out doc src/**/* --mode file",
		"init-project": "cp run.properties local.run.properties && cp test.properties local.test.properties",
		"prepare": "npm run build",
		"pretest": "tslint -p tsconfig.json",
		"test": "nyc mocha"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/financialforcedev/orizuru"
	},
	"keywords": [
		"webhook",
		"web",
		"heroku",
		"worker",
		"orizuru",
		"dyno"
	],
	"author": "financialforce",
	"license": "BSD-3-Clause",
	"dependencies": {
		"@types/express": "^4.16.0",
		"@types/fs-extra": "^5.0.3",
		"@types/lodash": "^4.14.110",
		"@types/node": "^10.3.4",
		"avsc": "^5.3.0",
		"express": "^4.16.3",
		"fs-extra": "^7.0.0",
		"http-status-codes": "^1.3.0",
		"lodash": "^4.17.10"
	},
	"devDependencies": {
		"@types/chai": "^4.1.4",
		"@types/chai-as-promised": "^7.1.0",
		"@types/mocha": "^5.2.2",
		"@types/sinon": "^5.0.1",
		"@types/sinon-chai": "^3.2.0",
		"chai": "^4.1.2",
		"chai-as-promised": "^7.1.1",
		"debug-plus": "^1.2.2",
		"mocha": "^5.2.0",
		"nyc": "^12.0.2",
		"proxyquire": "^2.0.1",
		"sinon": "^6.0.0",
		"sinon-chai": "^3.2.0",
		"supertest": "^3.1.0",
		"ts-node": "^6.1.1",
		"tslint": "^5.10.0",
		"typedoc": "^0.11.1",
		"typescript": "^3.0.1"
	},
	"nyc": {
		"all": true,
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100,
		"require": [
			"ts-node/register"
		],
		"extension": [
			".ts"
		],
		"exclude": [
			"coverage",
			"dist",
			"doc",
			"**/*.d.ts"
		],
		"reporter": [
			"lcov",
			"html",
			"text",
			"text-summary"
		],
		"sourceMap": true,
		"instrument": true
	}
}
