{
  "name": "@financialforcedev/orizuru",
  "version": "6.0.0-0",
  "description": "Streamlined communication between Heroku dynos / other worker processes",
  "main": "src/lib/index.js",
  "scripts": {
    "doc": "jsdoc -c config/jsdoc.json",
    "init-project": "cp run.properties local.run.properties && cp test.properties local.test.properties",
    "pretest": "eslint src",
    "single-test": "nyc --all=false mocha",
    "test": "nyc --exclude src/example mocha --recursive src/spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/financialforcedev/orizuru"
  },
  "keywords": [
    "webhook",
    "web",
    "heroku",
    "worker",
    "orizuru",
    "dyno"
  ],
  "author": "financialforce",
  "license": "BSD-3-Clause",
  "dependencies": {
    "avsc": "5.1.1",
    "body-parser": "1.18.2",
    "express": "4.16.2",
    "fs-extra": "5.0.0",
    "helmet": "3.9.0",
    "http-status-codes": "1.3.0",
    "lodash": "4.17.4"
  },
  "devDependencies": {
    "@financialforcedev/eslint-config": "3.0.1",
    "@financialforcedev/orizuru-transport-rabbitmq": "3.1.1",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "debug-plus": "1.2.2",
    "jsdoc": "3.5.5",
    "minami": "1.2.3",
    "mocha": "4.0.1",
    "nyc": "11.3.0",
    "proxyquire": "1.8.0",
    "sinon": "4.1.3",
    "sinon-chai": "2.14.0",
    "supertest": "3.0.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src"
    ],
    "reporter": [
      "lcov",
      "html",
      "text",
      "text-summary"
    ],
    "cache": true,
    "all": true
  }
}
