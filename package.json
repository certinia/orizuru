{
	"name": "@financialforcedev/orizuru",
	"version": "9.0.1",
	"description": "Streamlined communication between Heroku dynos / other worker processes",
	"main": "dist/src/index.js",
	"types": "dist/types/src/index.d.ts",
	"files": [
		"dist/src",
		"dist/types/src"
	],
	"scripts": {
		"build": "npm run build-clean && npm run build-compile && npm run build-copy",
		"build-clean": "rm -rf dist",
		"build-compile": "tsc",
		"build-copy": "npm run build-copy-transport",
		"build-copy-transport": "cp src/index/transport/transport.avsc dist/src/index/transport",
		"coverage": "nyc --report-dir=coverage --nycrc-path=test/nyc.opts mocha",
		"coverage-systemtests": "nyc --report-dir=coverage --nycrc-path=systemtests/nyc.opts mocha --opts systemtests/mocha.opts",
		"doc": "npm run doc-generate && npm run doc-sanitize-avsc && npm run doc-sanitize-node",
		"doc-generate": "typedoc --gitRevision master --ignoreCompilerErrors --out doc src/**/* --mode file",
		"doc-sanitize-avsc": "sed -E -i '' 's|'$PWD'/node_modules/avsc/types/index.d.ts:([0-9]*)|<a href=\"https://github.com/mtth/avsc/blob/master/types/index.d.ts#L\\1\">avsc/types/index.d.ts:\\1</a>|g' $(find doc -type f -regex '^doc/[a-zA-Z/.]*.html$')",
		"doc-sanitize-node": "sed -E -i '' 's|'$PWD'/node_modules/@types/node/index.d.ts:([0-9]*)|<a href=\"https://github.com/DefinitelyTyped/DefinitelyTyped/blob/master/types/node/index.d.ts#L\\1\">node/index.d.ts:\\1</a>|g' $(find doc -type f -regex '^doc/[a-zA-Z/.]*.html$')",
		"prepare": "npm run build",
		"pretest": "tslint -p tsconfig.json",
		"posttest": "nyc --report-dir=coverage-systemtests --nycrc-path=systemtests/nyc.opts mocha --opts systemtests/mocha.opts",
		"test": "nyc --report-dir=coverage --nycrc-path=test/nyc.opts mocha"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/financialforcedev/orizuru"
	},
	"keywords": [
		"webhook",
		"web",
		"heroku",
		"worker",
		"orizuru",
		"dyno"
	],
	"author": "financialforce",
	"license": "BSD-3-Clause",
	"dependencies": {
		"@types/express": "^4.16.1",
		"@types/lodash": "^4.14.120",
		"@types/node": "^10.12.18",
		"avsc": "^5.4.7",
		"express": "^4.16.4",
		"http-status-codes": "^1.3.0",
		"lodash": "^4.17.11"
	},
	"devDependencies": {
		"@financialforcedev/orizuru-transport-rabbitmq": "^5.0.1",
		"@types/chai": "^4.1.7",
		"@types/chai-as-promised": "^7.1.0",
		"@types/mocha": "^5.2.5",
		"@types/sinon": "^7.0.4",
		"@types/sinon-chai": "^3.2.2",
		"@types/supertest": "^2.0.7",
		"axios": "^0.18.0",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"debug-plus": "^1.2.2",
		"mocha": "^5.2.0",
		"nyc": "^13.1.0",
		"sinon": "^7.2.3",
		"sinon-chai": "^3.3.0",
		"supertest": "^3.4.2",
		"ts-node": "^8.0.1",
		"tslint": "^5.12.1",
		"typedoc": "^0.14.2",
		"typescript": "^3.2.4"
	}
}
